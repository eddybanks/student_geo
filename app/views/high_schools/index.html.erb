<p id="notice"><%= notice %></p>

<h1>High Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Act code</th>
      <th>Street line1</th>
      <th>Street line2</th>
      <th>Street line3</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @high_schools.each do |high_school| %>
      <tr>
        <td><%= high_school.name %></td>
        <td><%= high_school.act_code %></td>
        <td><%= high_school.street_line1 %></td>
        <td><%= high_school.street_line2 %></td>
        <td><%= high_school.street_line3 %></td>
        <td><%= high_school.latitude %></td>
        <td><%= high_school.longitude %></td>
        <td><%= link_to 'Show', high_school %></td>
        <td><%= link_to 'Edit', edit_high_school_path(high_school) %></td>
        <td><%= link_to 'Destroy', high_school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New High School', new_high_school_path %>
